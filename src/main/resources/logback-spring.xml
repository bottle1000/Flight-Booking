<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOKI_URL" value="${LOKI_URL:-http://10.0.0.38:3101/loki/api/v1/push}"/>
    <!-- Spring Boot 기본 로그백 설정 포함 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- Loki Appender 설정 (Loki4j 1.4.0 버전용) -->
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <!-- 배치 설정 -->
        <batchMaxItems>50</batchMaxItems>
        <batchTimeoutMs>2000</batchTimeoutMs>

        <!-- HTTP 전송 설정 -->
        <http class="com.github.loki4j.logback.JavaHttpSender">
            <url>${LOKI_URL}</url>
            <connectTimeout>5000</connectTimeout>
            <readTimeout>10000</readTimeout>
        </http>

        <!-- 로그 포맷 설정 (JsonEncoder 역할) -->
        <format class="com.github.loki4j.logback.JsonEncoder">
            <!-- 라벨 설정: Loki에서 로그를 분류하는 데 사용 -->
            <label>
                <pattern>application=spring-boot-app,environment=dev</pattern>
            </label>
            <!-- 로그 메시지 패턴 -->
            <message>
                {
                "time": "%d{yyyy-MM-dd'T'HH:mm:ss.SSS}",
                "level": "%level",
                "thread": "%thread",
                "logger": "%logger",
                "message": "%msg",
                "exception": "%exception"
                }
            </message>
        </format>
    </appender>

    <root level="info">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOKI"/>
    </root>
</configuration>
